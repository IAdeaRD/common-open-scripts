{
  "name": "@iadeard/common-open-scripts",
  "version": "0.0.1",
  "description": "IAdea Common Open Script Library",
  "scripts": {
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && node gitCommitMsg.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IAdeaRD/common-open-scripts.git"
  },
  "author": "Rich Hsu <rich@rak.tw> (https://www.rich-hsu.com)",
  "contributors": [
    "Rich Hsu <rich.hsu@iadea.com> (https://www.rich-hsu.com)",
    "Rich Hsu <rich@rak.tw> (https://www.rich-hsu.com)"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IAdeaRD/common-open-scripts/issues"
  },
  "homepage": "https://github.com/IAdeaRD/common-open-scripts#readme",
  "devDependencies": {
    "commitizen": "^4.2.5",
    "conventional-changelog-cli": "^2.2.2",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "defaultType": "fix",
      "path": "cz-conventional-changelog"
    }
  }
}
